<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>

    <!--Login-->
    <style name="LoginTheme" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorLoginLayoutBackground</item>
        <item name="android:buttonStyle">@style/LoginButtonStyle</item>
        <item name="android:textViewStyle">@style/LoginTextViewStyle</item>
    </style>

    <style name="LoginTextViewStyle" parent="android:style/Widget.TextView">
        <item name="android:textSize">@dimen/textSizeLoginBody</item>
        <item name="android:textColor">@color/colorLoginTextViewBody</item>
    </style>

    <style name="LoginButtonStyle" parent="android:style/Widget.Button">
        <item name="android:textSize">@dimen/textSizeLoginBody</item>
        <item name="android:textColor">@color/colorLoginButtonText</item>
        <item name="android:paddingTop">@dimen/paddingTopLoginButton</item>
        <item name="android:paddingBottom">@dimen/paddingBottomLoginButton</item>
        <item name="android:paddingStart">@dimen/paddingStartLoginButton</item>
        <item name="android:paddingEnd">@dimen/paddingEndLoginButton</item>
        <item name="android:background">@drawable/selector_button_login</item>
        <item name="android:drawablePadding">@dimen/paddingLoginDrawable</item>
    </style>

    <style name="LoginTextViewHeaderStyle" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorLoginTextViewHeader</item>
        <item name="android:textSize">@dimen/textSizeLoginHeader</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--HomePage-->
    <style name="HomePageTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorHomePageLayoutBackground</item>
        <item name="android:progressBarStyle">@style/HomePageProgressbarStyle</item>
        <item name="android:textViewStyle">@null</item>
    </style>

    <style name="HomePageProgressbarStyle" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="android:minWidth">@dimen/progressBarSize</item>
        <item name="android:maxWidth">@dimen/progressBarSize</item>
        <item name="android:minHeight">@dimen/progressBarSize</item>
        <item name="android:maxHeight">@dimen/progressBarSize</item>
    </style>

    <style name="HomePageTextViewHeaderStyle" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorHomePageTextViewHeader</item>
        <item name="android:textSize">@dimen/textSizeHomePageHeader</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HomePageTextViewSubheaderStyle" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorHomePageTextViewSubheader</item>
        <item name="android:textSize">@dimen/textSizeHomePageSubheader</item>
    </style>

    <style name="HomePageTextViewBodyStyle" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorHomePageTextViewBody</item>
        <item name="android:textSize">@dimen/textSizeHomePageBody</item>
    </style>

    <!--User details-->
    <style name="UserDetailsTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorUserDetailsLayoutBackground</item>
        <item name="android:textViewStyle">@null</item>
    </style>

    <style name="UserDetailsTextViewHeaderStyle" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorUserDetailsTextViewHeader</item>
        <item name="android:textSize">@dimen/textSizeUserDetailsHeader</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="UserDetailsTextViewSubheaderStyle" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorUserDetailsTextViewSubheader</item>
        <item name="android:textSize">@dimen/textSizeUserDetailsSubheader</item>
    </style>

    <style name="UserDetailsTextViewBodyStyle" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorUserDetailsTextViewBody</item>
        <item name="android:textSize">@dimen/textSizeUserDetailsBody</item>
    </style>
</resources>
